# Django Settings
# IMPORTANT: Change SECRET_KEY in production to a long random string
SECRET_KEY=django-insecure-change-this-in-production-to-a-long-random-string
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
# For Docker: postgres:5432 (inside container network)
# For Local: localhost:5433 (mapped external port)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/aqi_db

# Redis Cache
REDIS_URL=redis://redis:6379/0

# CORS Settings (comma-separated allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# JWT Token Lifetimes (in minutes)
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# Email Configuration
# For development: console backend (prints emails to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production: SMTP backend (uncomment and configure)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=noreply@breatheasy.com

# Cache TTL Settings (in seconds)
AQI_CACHE_TTL=300
WAQI_CITY_RANKINGS_CACHE_TTL=900

# HuggingFace API Token (for RAG system - optional)
HUGGINGFACEHUB_API_TOKEN=your-huggingface-token-here

# Open-Meteo API Configuration
OPEN_METEO_MIN_INTERVAL=1.0
OPEN_METEO_MAX_RETRIES=3
OPEN_METEO_TIMEOUT=30

# Celery Configuration (if using background tasks)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# MQTT Configuration
# Note: MQTT broker settings are configured per-user in the database via Django admin
# Users can add their own MQTT broker host, port, topic, and credentials
# The MQTT listener service will automatically connect to all active user configurations
